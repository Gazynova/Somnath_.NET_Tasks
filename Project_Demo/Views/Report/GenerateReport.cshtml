@model Project_Demo.Models.ViewModels.ReportViewModel

<h2>Student Report for @Model.StudentName</h2>

<div>
    <p><strong>Email:</strong> @Model.StudentEmail</p>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
</div>

<h3>Enrolled Courses</h3>
<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Description</th>
            <th>Grade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.EnrolledCourses)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.CourseDescription</td>
                <td>@course.Grade</td>
            </tr>
        }
    </tbody>
</table>
